<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Información del autor -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/autor_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_author_placeholder"
            android:background="@drawable/round_image_background"
            android:contentDescription="@string/author_image"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/autor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kevin López"
            android:textAppearance="@style/S" />
    </LinearLayout>







    <!-- Imagen de la receta -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_recipe_sample"
        android:background="@drawable/round_image_background"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/recipe_image" />

    <!-- Título de la receta -->
    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pancake"
        android:textAppearance="@style/H2" />

    <!-- Calificación de la receta -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/star_icon"
            android:contentDescription="@string/rating_star" />

        <TextView
            android:id="@+id/recipe_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="3.5/5"
            android:textAppearance="@style/P2"
            android:textColor="@color/blue" />
    </LinearLayout>

    <!-- Tipo de comida y tiempo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/recipe_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desayuno"
            android:textAppearance="@style/S"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_time"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/preparation_time" />

        <TextView
            android:id="@+id/recipe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="60 min"
            android:textAppearance="@style/S"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>
